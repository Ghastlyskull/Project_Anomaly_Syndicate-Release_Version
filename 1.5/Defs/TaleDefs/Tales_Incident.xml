<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <TaleDef>
    <defName>FleshbeastsAttackWalkin</defName>
    <label>fleshbeast attack</label>
    <taleClass>Tale_SinglePawn</taleClass>
    <type>Volatile</type>
    <baseInterest>5</baseInterest>
    <rulePack>
      <rulesStrings>
        <li>tale_noun->flesh creatures menacing [PAWN_nameDef]'s [Community]</li>
        <li>tale_noun->[PAWN_nameDef]'s [Community] being attacked by flesh creatures</li>
        <li>image->a horde of [Animal]s [circumstance_phrase]</li>
        <li>image->[Quantity_adjphrase] [Animal]s [circumstance_phrase]</li>
        <li>image->a [AdjectiveLarge] [Animal] [circumstance_phrase]</li>
        <li>image->[Quantity_adjphrase] shadowy figures [circumstance_phrase]</li>
        <li>image->[Quantity_adjphrase] shadowy quadrupeds [circumstance_phrase]</li>
        <li>circumstance_phrase->advancing over a [TerrainFeature]</li>
        <li>circumstance_phrase->completely encircling a [Community]</li>
        <li>circumstance_phrase->attacking [Quantity_adjphrase] [PersonJob]s</li>
        <li>circumstance_phrase->slaughtering [Quantity_adjphrase] [Animal]s</li>
        <li>circumstance_phrase->covered in [Gore]</li>
        <li>hate_emotion->hatred</li>
        <li>hate_emotion->anger</li>
        <li>hate_emotion->fury</li>
        <li>desc_sentence->[PAWN_nameDef] organizes a resistance.</li>
        <li>desc_sentence->[PAWN_nameDef] wields a [Weapon] defensively.</li>
        <li>desc_sentence->[PAWN_nameDef] lies on the ground, wounded.</li>
        <li>desc_sentence->[PAWN_nameDef] retaliates with [PAWN_possessive] [Weapon].</li>
        <li>desc_sentence->[PAWN_nameDef] wears a [AdjectiveBadass] expression.</li>
        <li>desc_sentence->[PAWN_nameDef] wears a [AdjectiveAngsty] expression.</li>
        <li>desc_sentence->The ground is coated in [Gore].</li>
        <li>desc_sentence->[Quantity_adjphrase] [PersonJob]s flee the area.</li>
        <li>desc_sentence->[Quantity_adjphrase] [Animal]s flee the area.</li>
      </rulesStrings>
    </rulePack>
  </TaleDef>
</Defs>
